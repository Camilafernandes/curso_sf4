{% extends 'base.html.twig' %}

{%  block title%} Listando Contato {% endblock %}

{%  block body%}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Listando Contatos<h1>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover mt-3">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Mensagem</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contato in contatos %}
                        <tr>
                            <td>{{ contato.nome }} </td>
                            <td>{{ contato.email }} </td>
                            <td>{{ contato.mensagem }} </td>
                            <td>
                                <a class="btn btn-sm btn-warning" 
                                href="{{ path('visualizar_contato', {"id": contato.id}) }}">
                                <i class="fa fa-eye"></i></a>
                            </td>
                        </tr>
                        
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
